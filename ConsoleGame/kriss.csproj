    <Configurations>Debug;Release;L</Configurations>
    <Platforms>AnyCPU;x64</Platforms>
    <ApplicationIcon>sword.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="TextResources\Chapters\c1.json" />
    <None Remove="TextResources\status.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="textResources.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="TextResources\Chapters\c1.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="TextResources\status.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ProjectExtensions><VisualStudio><UserProperties /></VisualStudio></ProjectExtensions>

</Project>
